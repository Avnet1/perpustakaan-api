# Ignore node modules and vendor to avoid copying host dependencies
/node_modules
/vendor

# Ignore Laravel cache and logs
/storage/*.key
/storage/app/*
!/storage/app/public/
!/storage/app/queues/
!/storage/app/backups/
!/storage/app/tmp/
!/storage/app/.gitignore
/storage/framework/*
!/storage/framework/cache
!/storage/framework/sessions
!/storage/framework/views
/storage/logs/*

# Ignore environment files
.env
.env.*.backup
.env.backup

# Ignore IDE and OS-specific files
*.swp
*.swo
*.log
*.DS_Store
*.idea
.vscode

# Ignore Docker-related temporary files
.dockerignore
Dockerfile
docker-compose*.yml

# Git
.git
.gitignore
